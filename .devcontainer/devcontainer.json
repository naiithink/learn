{
	"name": "Ubuntu",

	/* // >>> Custom build
	"build": {
		"dockerfile": "base.Dockerfile",
		// Update 'VARIANT' to pick an Ubuntu version: hirsute, focal, bionic
		// Use hirsute or bionic on local arm64/Apple Silicon.
		"args": { "VARIANT": "focal" }
	},
	// <<< Custom build */

	// >>> VS Code build
	"build": {
		"dockerfile": "Dockerfile",
		// Update 'VARIANT' to pick an Ubuntu version: hirsute, focal, bionic
		// Use hirsute or bionic on local arm64/Apple Silicon.
		"args": { "VARIANT": "ubuntu-22.04" }
	},

	// "features": {
	// 	"git": "latest",
	// 	"git-lfs": "latest",
	// 	"github-cli": "latest",
	// 	"java": "lts",
	// 	"node": "lts",
	// 	"python": "latest",
	// 	"jupyterlab": "latest"
	// },
	// <<< VS Code build

	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.defaultProfile.linux": "zsh",
		"terminal.integrated.profiles.linux": {
			"bash": {
				"path": "/usr/bin/bash",
				"icon": "terminal-bash"
			},
			"zsh": {
				"path": "/usr/bin/zsh"
			}
		},
		"python.defaultInterpreterPath": "/usr/bin/python3"
	},

	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"ms-vscode-remote.vscode-remote-extensionpack",
		"ms-vscode.live-server",
		"ms-vsliveshare.vsliveshare-pack",
		"GitHub.remotehub",
		"GitLab.gitlab-workflow",
		"ms-vscode.cpptools-extension-pack",
		"ms-vscode.cmake-tools",
		"ms-python.python",
		"ms-python.vscode-pylance",
		"ms-toolsai.jupyter",
		"ms-vscode.hexeditor",
		"msrvida.vscode-sanddance",
		"vscjava.vscode-java-pack",
		"redhat.vscode-xml",
		"redhat.vscode-yaml",
		"James-Yu.latex-workshop",
		"lextudio.restructuredtext-pack",
		"bierner.github-markdown-preview"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": [
		"git config oh-my-zsh.hide-info 1",
		"git config --global core.editor emacs -nw",
		"git config --global autocrlf input",
		"git config commit.template .gitmessage",
		"git config commit.gpgSign true",
		"git config tag.gpgSign true",
		"git config tag.forceSignAnnotated true",
		"git remote add all git@gitlab.com:naiithink/private.git",
		"git remote set-url --push --add all git@gitlab.com:naiithink/private.git",
		"git remote set-url --push --add all git@github.com:naiithink/private.git"
	],

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode",
	"containerEnv": {
		"CC": "clang",
		"CFLAGS": "-g",
		"CXX": "clang++",
		"CXXFLAGS": "-g"
	}
}
